{
  "name": "text-highlighter",
  "displayName": "Text Highlighter",
  "icon": "project_icon_small.jpg",
  "publisher": "tobiasorthproduction",
  "author": "Tobias Orth",
  "repository": {
    "type": "git",
    "url": "https://github.com/tobiasorth1/text-highlighter"
  },
  "description": "Highlight text, TODOs, and logs with custom colors and regex patterns. Never miss a critical comment again.",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "highlight",
    "text",
    "color",
    "regex",
    "todo",
    "annotation",
    "log",
    "decorator",
    "pattern",
    "search"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Text Highlighter",
      "properties": {
        "textHighlighter.rules": {
          "type": "array",
          "default": [],
          "description": "Rules for highlighting text.",
          "items": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "The text pattern to highlight (string or regex)."
              },
              "color": {
                "type": "string",
                "description": "CSS color for the text. Leave empty to keep default text color."
              },
              "backgroundColor": {
                "type": "string",
                "description": "CSS background color.",
                "default": "rgba(255, 255, 0, 0.3)"
              },
              "isRegex": {
                "type": "boolean",
                "description": "Whether the pattern is a regular expression.",
                "default": false
              },
              "problemMessage": {
                "type": "string",
                "description": "Custom message to display in the Problems tab. Defaults to the pattern string."
              },
              "severity": {
                "type": "string",
                "description": "Severity of the diagnostic.",
                "enum": [
                  "error",
                  "warning",
                  "information",
                  "hint"
                ],
                "default": "error"
              },
              "languages": {
                "type": "array",
                "description": "Language IDs or file extensions to apply this rule to (e.g., ['python', 'javascript'] or ['*.md', '*.txt']). At least one is required.",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              }
            },
            "required": [
              "pattern",
              "languages"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:compatibility": "node ./out/test/runTest.js --compatibility"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}